{
  "type": "mcp-server",
  "packageName": "@yiyang.1i/sms-mcp-server",
  "description": "Enables Claude and other assistants to send SMS and MMS messages through Twilio's API with phone number validation and specialized prompts for greetings and haikus.",
  "url": "https://github.com/yiyangli/sms-mcp-server",
  "runtime": "node",
  "license": "unknown",
  "env": {
    "ACCOUNT_SID": {
      "description": "your_account_sid",
      "required": true
    },
    "AUTH_TOKEN": {
      "description": "your_auth_token",
      "required": true
    },
    "FROM_NUMBER": {
      "description": "your_twilio_number",
      "required": true
    }
  },
  "name": "SMS MCP Server"
}
