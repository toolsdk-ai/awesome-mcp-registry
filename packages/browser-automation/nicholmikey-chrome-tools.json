{
  "type": "mcp-server",
  "packageName": "@nicholmikey/chrome-tools",
  "description": "Integrates with Chrome's DevTools Protocol to enable remote control of browser tabs, including JavaScript execution, screenshot capture, and network traffic monitoring.",
  "url": "https://github.com/nicholmikey/chrome-tools-mcp",
  "runtime": "node",
  "license": "unknown",
  "env": {
    "CHROME_DEBUG_URL": {
      "description": "http://localhost:9222",
      "required": true
    },
    "CHROME_CONNECTION_TYPE": {
      "description": "direct",
      "required": true
    },
    "CHROME_ERROR_HELP": {
      "description": "custom error message",
      "required": true
    }
  },
  "name": "Chrome Tools MCP",
  "stars": 40
}