{
  "type": "mcp-server",
  "packageName": "microsoft-graph-mcp-server",
  "description": "A comprehensive server that enables AI applications to interact with Microsoft 365 and Azure AD services through standardized Model Context Protocol interfaces.",
  "url": "https://github.com/burconsult/msgraph-mcp",
  "runtime": "python",
  "license": "mit",
  "env": {
    "MSGRAPH_CLIENT_ID": {
      "description": "Your Azure AD application client ID",
      "required": true
    },
    "MSGRAPH_LOG_LEVEL": {
      "description": "Logging level",
      "required": true
    },
    "MSGRAPH_TENANT_ID": {
      "description": "Your Azure AD tenant ID",
      "required": true
    },
    "MSGRAPH_AUTH_METHOD": {
      "description": "Authentication method to use (client_credentials, device_code, interactive, managed_identity, azure_cli)",
      "required": true
    },
    "MSGRAPH_CLIENT_SECRET": {
      "description": "Your Azure AD application client secret",
      "required": true
    },
    "MSGRAPH_GRAPH_BASE_URL": {
      "description": "Microsoft Graph API base URL",
      "required": true
    },
    "MSGRAPH_REQUEST_TIMEOUT": {
      "description": "Request timeout in seconds",
      "required": true
    },
    "MSGRAPH_ENABLE_DEBUG_LOGGING": {
      "description": "Enable debug logging",
      "required": true
    },
    "MSGRAPH_ENABLE_MAIL_OPERATIONS": {
      "description": "Enable mail operations",
      "required": true
    },
    "MSGRAPH_ENABLE_USER_OPERATIONS": {
      "description": "Enable user operations",
      "required": true
    },
    "MSGRAPH_ENABLE_GROUP_OPERATIONS": {
      "description": "Enable group operations",
      "required": true
    },
    "MSGRAPH_ENABLE_TEAMS_OPERATIONS": {
      "description": "Enable teams operations",
      "required": true
    },
    "MSGRAPH_MAX_CONCURRENT_REQUESTS": {
      "description": "Maximum number of concurrent requests",
      "required": true
    },
    "MSGRAPH_MAX_REQUESTS_PER_SECOND": {
      "description": "Maximum number of requests per second",
      "required": true
    },
    "MSGRAPH_ENABLE_CALENDAR_OPERATIONS": {
      "description": "Enable calendar operations",
      "required": true
    },
    "MSGRAPH_ENABLE_DIRECTORY_OPERATIONS": {
      "description": "Enable directory operations",
      "required": true
    },
    "MSGRAPH_ENABLE_APPLICATION_OPERATIONS": {
      "description": "Enable application operations",
      "required": true
    }
  },
  "name": "Microsoft Graph MCP Server"
}