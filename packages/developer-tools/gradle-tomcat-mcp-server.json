{
  "type": "mcp-server",
  "packageName": "gradle-tomcat-mcp-server",
  "description": "Enables management of Gradle-based Tomcat applications with capabilities for starting, stopping, restarting processes and querying application logs.",
  "url": "https://github.com/lkb2k/mcp-gradle",
  "runtime": "node",
  "license": "mit",
  "env": {
    "LOG_DIR": {
      "description": "Directory for log files",
      "required": true
    },
    "TOMCAT_PORT": {
      "description": "Expected Tomcat port",
      "required": true
    },
    "GRADLE_COMMAND": {
      "description": "Gradle command to run",
      "required": true
    },
    "GRADLE_WORKING_DIR": {
      "description": "Working directory for Gradle commands",
      "required": true
    },
    "MAX_LOG_BUFFER_SIZE": {
      "description": "Maximum log entries in memory",
      "required": true
    }
  },
  "name": "Gradle Tomcat MCP Server"
}
