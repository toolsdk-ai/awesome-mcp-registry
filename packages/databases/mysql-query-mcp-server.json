{
	"type": "mcp-server",
	"packageName": "mysql-query-mcp-server",
	"description": "Provides a secure, read-only bridge to MySQL databases, enabling natural language querying across multiple environments with strict validation and comprehensive error handling.",
	"url": "https://github.com/devakone/mysql-query-mcp-server",
	"runtime": "node",
	"license": "unknown",
	"env": {
		"LOCAL_DB_HOST": {
			"description": "localhost",
			"required": true
		},
		"LOCAL_DB_USER": {
			"description": "root",
			"required": true
		},
		"LOCAL_DB_PASS": {
			"description": "<YOUR_LOCAL_DB_PASSWORD>",
			"required": true
		},
		"LOCAL_DB_NAME": {
			"description": "your_database",
			"required": true
		},
		"LOCAL_DB_PORT": {
			"description": "3306",
			"required": true
		},
		"DEVELOPMENT_DB_HOST": {
			"description": "dev.example.com",
			"required": true
		},
		"DEVELOPMENT_DB_USER": {
			"description": "<DEV_USER>",
			"required": true
		},
		"DEVELOPMENT_DB_PASS": {
			"description": "<DEV_PASSWORD>",
			"required": true
		},
		"DEVELOPMENT_DB_NAME": {
			"description": "your_database",
			"required": true
		},
		"DEVELOPMENT_DB_PORT": {
			"description": "3306",
			"required": true
		},
		"STAGING_DB_HOST": {
			"description": "staging.example.com",
			"required": true
		},
		"STAGING_DB_USER": {
			"description": "<STAGING_USER>",
			"required": true
		},
		"STAGING_DB_PASS": {
			"description": "<STAGING_PASSWORD>",
			"required": true
		},
		"STAGING_DB_NAME": {
			"description": "your_database",
			"required": true
		},
		"STAGING_DB_PORT": {
			"description": "3306",
			"required": true
		},
		"PRODUCTION_DB_HOST": {
			"description": "prod.example.com",
			"required": true
		},
		"PRODUCTION_DB_USER": {
			"description": "<PRODUCTION_USER>",
			"required": true
		},
		"PRODUCTION_DB_PASS": {
			"description": "<PRODUCTION_PASSWORD>",
			"required": true
		},
		"PRODUCTION_DB_NAME": {
			"description": "your_database",
			"required": true
		},
		"PRODUCTION_DB_PORT": {
			"description": "3306",
			"required": true
		},
		"DEBUG": {
			"description": "false",
			"required": true
		},
		"MCP_MYSQL_SSL": {
			"description": "true",
			"required": true
		},
		"MCP_MYSQL_REJECT_UNAUTHORIZED": {
			"description": "false",
			"required": true
		}
	},
	"name": "MySQL Query MCP Server"
}
