{
  "type": "mcp-server",
  "packageName": "@niledatabase/nile-mcp-server",
  "description": "MCP server for Nile Database - Manage and query databases, tenants, users, auth using LLMs",
  "url": "https://github.com/niledatabase/nile-mcp-server/tree/main",
  "runtime": "node",
  "license": "MIT",
  "env": {
    "NILE_API_KEY": {
      "description": "API KEY for Nile",
      "required": true
    },
    "NILE_WORKSPACE_SLUG": {
      "description": "Nile workspace name",
      "required": true
    }
  }
}